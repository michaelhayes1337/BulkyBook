@model IEnumerable<Category>
@{
    ViewData["Title"] = "View";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i> Create Category
            </a>
        </div>
    </div>
</div>
<br />
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Edit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td width="50%">
                    @cat.Name
                </td>
                <td width="50%">
                    @cat.DisplayOrder
                </td>
                <td width="50%">
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-outline-secondary" asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id"><i class="bi bi-tools"></i></a>
                        <a class="btn btn-outline-secondary" asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id"><i class="bi bi-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


